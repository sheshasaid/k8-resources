apiVersion: v1
kind: Pod
metadata:
  name: nodeport-pod
  labels:
    app: nodeport-app
spec:
  containers:
    - name: mycontainer
      image: nginx
      ports:
        - containerPort: 80
---
apiVersion: v1
kind: Service
metadata:
  name: nodeport-service
spec:
  type: NodePort
  selector:
    app: nodeport-app
  ports:
    - port: 80
      targetPort: 80      # âœ” FIXED (camelCase)
      nodePort: 30081